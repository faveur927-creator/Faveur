// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  hashedPassword String
  accounts       Account[]
}

model Account {
  id       String  @id @default(cuid())
  userId   String
  balance  Float
  currency String
  user     User    @relation(fields: [userId], references: [id])

  @@index([userId])
}
